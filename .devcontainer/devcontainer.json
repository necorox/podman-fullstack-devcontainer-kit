{
    "name": "Fullstack Dev Environment",
    "dockerComposeFile": [
        "compose.yaml",
        "../infrastructure/compose.tools.yaml",
        "../infrastructure/compose.data.redis.yaml",
        "../infrastructure/compose.data.postgres.yaml",
        // "../infrastructure/compose.data.mysql.yaml",
        "../infrastructure/compose.app.authentik.yaml"
    ],
    "service": "devbox",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "forwardPorts": [
        3000,
        8080,
        8082,
        8000,
        8001,
        5433,
        6379,
        9000
    ],
    "remoteEnv": {
        "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
            "version": "latest",
            "enableNonRootDocker": "true",
            "moby": "true"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "dbaeumer.vscode-eslint",
                "bmewburn.vscode-intelephense-client",
                "ms-python.python",
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "humao.rest-client"
            ]
        }
    },
    "remoteUser": "vscode"
}